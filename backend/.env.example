# Supabase Configuration
SUPABASE_URL=https://xyz.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Database Configuration (for Prisma)
DATABASE_URL="postgresql://postgres.xyz:your-password@aws-1-eu-west-3.pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.xyz:your-password@aws-1-eu-west-3.pooler.supabase.com:5432/postgres"

# Application Configuration
PORT=8080
NODE_ENV=development
JWT_SECRET=your-jwt-secret

# Storage Configuration
STORAGE_PROVIDER=supabase
LOCAL_STORAGE_PATH=./data/uploads

# Upload Limits
MAX_UPLOAD_SIZE_BYTES=10485760
MAX_STORAGE_PER_USER_BYTES=1073741824

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://your-production-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
