# Supabase Configuration
SUPABASE_URL=https://abc.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Database Configuration (for Prisma)
# Connect to Supabase via connection pooling
DATABASE_URL="postgresql://postgres.abc:[YOUR-PASSWORD]@aws-1-eu-west-3.pooler.supabase.com:6543/postgres?pgbouncer=true"
# Direct connection to the database. Used for migrations
DIRECT_URL="postgresql://postgres.abc:[YOUR-PASSWORD]@aws-1-eu-west-3.pooler.supabase.com:5432/postgres"

# Application Configuration
PORT=8080
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# Storage Configuration
STORAGE_PROVIDER=supabase
LOCAL_STORAGE_PATH=./data/uploads

# Upload Limits
MAX_UPLOAD_SIZE_BYTES=10485760
MAX_STORAGE_PER_USER_BYTES=1073741824

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
