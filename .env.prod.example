# =============================================================================
# SelfVault - Production Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=selfvault
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=selfvault

# -----------------------------------------------------------------------------
# MinIO (S3-compatible storage)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-secure-minio-password
MINIO_CONSOLE_PORT=9001
S3_BUCKET=selfvault

# -----------------------------------------------------------------------------
# Application Security
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 64
JWT_SECRET=your-very-long-and-secure-jwt-secret-key

# -----------------------------------------------------------------------------
# Supabase (for authentication - optional if using local auth)
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
FRONTEND_PORT=80
VITE_API_URL=http://your-domain.com:8080
# Or with reverse proxy: VITE_API_URL=https://api.your-domain.com

# -----------------------------------------------------------------------------
# Upload Limits
# -----------------------------------------------------------------------------
# 50MB max upload size
MAX_UPLOAD_SIZE_BYTES=52428800
# 5GB max storage per user
MAX_STORAGE_PER_USER_BYTES=5368709120

# -----------------------------------------------------------------------------
# CORS (comma-separated list of allowed origins)
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost,http://your-domain.com,https://your-domain.com

# -----------------------------------------------------------------------------
# Let's Encrypt (for Traefik HTTPS - optional)
# -----------------------------------------------------------------------------
# ACME_EMAIL=your-email@example.com
